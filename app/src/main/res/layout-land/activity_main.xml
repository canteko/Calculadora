<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonCero"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor1"
        app:layout_constraintEnd_toStartOf="@id/gVer4"
        app:layout_constraintStart_toEndOf="@id/gVer1"
        app:layout_constraintTop_toBottomOf="@id/gHor2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btComma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonComma"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor1"
        app:layout_constraintEnd_toStartOf="@id/gVer5"
        app:layout_constraintStart_toEndOf="@id/gVer4"
        app:layout_constraintTop_toBottomOf="@id/gHor2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonEqual"
        style="@style/symbolButton"
        app:layout_constraintBottom_toTopOf="@id/gHor1"
        app:layout_constraintEnd_toStartOf="@id/gVer6"
        app:layout_constraintStart_toEndOf="@id/gVer5"
        app:layout_constraintTop_toBottomOf="@id/gHor2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonOne"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor2"
        app:layout_constraintEnd_toStartOf="@id/gVer2"
        app:layout_constraintStart_toEndOf="@id/gVer1"
        app:layout_constraintTop_toBottomOf="@id/gHor3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonTwo"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor2"
        app:layout_constraintEnd_toStartOf="@id/gVer3"
        app:layout_constraintStart_toEndOf="@id/gVer2"
        app:layout_constraintTop_toBottomOf="@id/gHor3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonThree"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor2"
        app:layout_constraintEnd_toStartOf="@id/gVer4"
        app:layout_constraintStart_toEndOf="@id/gVer3"
        app:layout_constraintTop_toBottomOf="@id/gHor3" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonPlus"
        style="@style/symbolButton"
        app:layout_constraintBottom_toTopOf="@id/gHor3"
        app:layout_constraintEnd_toStartOf="@id/gVer5"
        app:layout_constraintStart_toEndOf="@id/gVer4"
        app:layout_constraintTop_toBottomOf="@id/gHor4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonFour"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor3"
        app:layout_constraintEnd_toStartOf="@id/gVer2"
        app:layout_constraintStart_toEndOf="@id/gVer1"
        app:layout_constraintTop_toBottomOf="@id/gHor4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonFive"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor3"
        app:layout_constraintEnd_toStartOf="@id/gVer3"
        app:layout_constraintStart_toEndOf="@id/gVer2"
        app:layout_constraintTop_toBottomOf="@id/gHor4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonSix"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor3"
        app:layout_constraintEnd_toStartOf="@id/gVer4"
        app:layout_constraintStart_toEndOf="@id/gVer3"
        app:layout_constraintTop_toBottomOf="@id/gHor4" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonMinus"
        style="@style/symbolButton"
        app:layout_constraintBottom_toTopOf="@id/gHor3"
        app:layout_constraintEnd_toStartOf="@id/gVer6"
        app:layout_constraintStart_toEndOf="@id/gVer5"
        app:layout_constraintTop_toBottomOf="@id/gHor4" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonSeven"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor4"
        app:layout_constraintEnd_toStartOf="@id/gVer2"
        app:layout_constraintStart_toEndOf="@id/gVer1"
        app:layout_constraintTop_toBottomOf="@id/gHor5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonEight"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor4"
        app:layout_constraintEnd_toStartOf="@id/gVer3"
        app:layout_constraintStart_toEndOf="@id/gVer2"
        app:layout_constraintTop_toBottomOf="@id/gHor5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonNine"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor4"
        app:layout_constraintEnd_toStartOf="@id/gVer4"
        app:layout_constraintStart_toEndOf="@id/gVer3"
        app:layout_constraintTop_toBottomOf="@id/gHor5" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btMul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonMult"
        style="@style/symbolButton"
        app:layout_constraintBottom_toTopOf="@id/gHor2"
        app:layout_constraintEnd_toStartOf="@id/gVer5"
        app:layout_constraintStart_toEndOf="@id/gVer4"
        app:layout_constraintTop_toBottomOf="@id/gHor3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btClear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonClear"
        style="@style/numberButton"
        app:layout_constraintBottom_toTopOf="@id/gHor4"
        app:layout_constraintEnd_toStartOf="@id/gVer6"
        app:layout_constraintStart_toEndOf="@id/gVer4"
        app:layout_constraintTop_toBottomOf="@id/gHor5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btDivide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/buttonDiv"
        style="@style/symbolButton"
        app:layout_constraintBottom_toTopOf="@id/gHor2"
        app:layout_constraintEnd_toStartOf="@id/gVer6"
        app:layout_constraintStart_toEndOf="@id/gVer5"
        app:layout_constraintTop_toBottomOf="@id/gHor3" />

    <View
        android:id="@+id/separator"
        android:layout_height="0dp"
        style="@style/separator"
        app:layout_constraintBottom_toBottomOf="@id/gHor1"
        app:layout_constraintEnd_toEndOf="@id/gVer4"
        app:layout_constraintStart_toStartOf="@id/gVer4"
        app:layout_constraintTop_toTopOf="@id/gHor5" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        style="@style/screenNumber"
        android:gravity="center|end"
        android:text="@string/buttonCero"
        app:layout_constraintBottom_toTopOf="@id/gHor5"
        app:layout_constraintEnd_toStartOf="@id/gVer6"
        app:layout_constraintStart_toEndOf="@id/gVer1"
        app:layout_constraintTop_toBottomOf="@id/gHor6" />

</androidx.constraintlayout.widget.ConstraintLayout>